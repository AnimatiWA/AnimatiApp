<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/gradient_pink"
        android:alpha="0.4"/>

    <TextView
        android:id="@+id/textViewPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/metodo_title"
        android:text="@string/select_payment_method"
        android:contentDescription="@string/select_payment_method"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/colorBox"
        android:layout_width="353dp"
        android:layout_height="533dp"
        android:layout_margin="16dp"
        android:backgroundTint="#F6F6F6"
        app:cardCornerRadius="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewCreditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_card"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="14dp"
                android:gravity="start|center_vertical"
                android:layout_marginBottom="14dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/credit_card"
                android:onClick="navigateToactivity_cuotas"
                android:drawableEnd="@drawable/flecha_correcta" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B0B0B0"
                android:layout_marginBottom="14dp" />

            <TextView
                android:id="@+id/textViewDebitCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/debit_card"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="14dp"
                android:gravity="start|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/debit_card"
                android:onClick="navigateToactivity_numeros_tarjeta"
                android:drawableEnd="@drawable/flecha_correcta" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

