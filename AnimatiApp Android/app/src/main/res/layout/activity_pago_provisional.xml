<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A97B0">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFCFEF"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/info_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debido a problemas técnicos solo aceptamos transferencias"
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/datos_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/cbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CBU: 1234567890123456789012"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alias: mi.alias.ejemplo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />
            <TextView
                android:id="@+id/titular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titular: Juan Pérez"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/send_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar comprobante a animati-app@gmail.com"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
