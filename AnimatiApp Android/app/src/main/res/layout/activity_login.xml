<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".LoginActivity">

    <!-- Contenedor con contraste adecuado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/colorBox"
        android:layout_width="243dp"
        android:layout_height="533dp"
        android:layout_margin="16dp"
        android:backgroundTint="#F6F6F6"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo con mejor accesibilidad -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:contentDescription="Logo de Animati App"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/animati_logo" />

            <!-- Campo de usuario accesible -->
            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="Usuario"
                android:inputType="text"
                android:textColorHint="#000000"
                android:layout_marginTop="16dp"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Campo de contraseña accesible -->
            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:layout_marginTop="16dp"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Botón de inicio de sesión con accesibilidad mejorada -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_button_background"
                android:text="Iniciar sesión"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:contentDescription="Presiona para iniciar sesión"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Botón de recuperar contraseña con mejora en accesibilidad -->
            <Button
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="14sp"
                android:contentDescription="Presiona para recuperar tu contraseña"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Texto para registro con enfoque en accesibilidad -->
            <TextView
                android:id="@+id/registerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="¿Aún no tienes una cuenta? Regístrate aquí"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="yes" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
