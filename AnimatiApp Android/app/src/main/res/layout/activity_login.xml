<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login">

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <View
        android:id="@+id/colorBox"
        android:layout_width="243dp"
        android:layout_height="533dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/card_login"
        android:backgroundTint="#F6F6F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504"
        tools:layout_editor_absoluteX="59dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/contrasena_text"
        android:textColorHint="#5A5A5A"
        android:autofillHints="password"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        app:layout_constraintVertical_bias="0.492"
        tools:layout_editor_absoluteX="76dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="214dp"
        android:layout_height="106dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextText2"
        app:layout_constraintTop_toTopOf="@+id/colorBox"
        app:layout_constraintVertical_bias="0.467"
        app:srcCompat="@drawable/sobre_nosotros"
        tools:layout_editor_absoluteX="73dp"
        android:contentDescription="@string/descripcion_logo"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:text="@string/login_button_text"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:rippleColor="#000333"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="404dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/usuario_text"
        android:textColorHint="#5A5A5A"
        android:autofillHints="username"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="267dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Opciones_inicio_sesion_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/colorBox"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="127dp" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="640dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/colorBox"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.111"
        tools:layout_editor_absoluteX="105dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/colorBox"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/google_icon"
        tools:layout_editor_absoluteX="159dp"
        android:contentDescription="Logo de google"/>


</androidx.constraintlayout.widget.ConstraintLayout>