<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animatiappandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Nueva actividad del menú principal -->
        <activity android:name=".MainMenuActivity"
            android:exported="true"> <!-- Asegúrate de que esta actividad esté exportada -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades del menú -->
        <activity android:name=".InicioActivity" android:exported="false" />
        <activity android:name=".ContactoActivity" android:exported="false" />
        <activity android:name=".SobreNosotrosActivity" android:exported="false" />
        <activity android:name=".CartActivity" android:exported="false" />
        <activity android:name=".RegisterActivity" android:exported="false" />

    </application>
</manifest>

